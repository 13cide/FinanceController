<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="80dp"/>

    <LinearLayout
        android:id="@+id/navBar"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:weightSum="4">

        <LinearLayout
            android:animateLayoutChanges="true"
            android:id="@+id/history_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/round_back_history"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <ImageView
                android:animateLayoutChanges="true"
                android:id="@+id/history_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/history_icon" />

            <TextView
                android:animateLayoutChanges="true"
                android:id="@+id/history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="История"
                android:textColor="@color/history"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:animateLayoutChanges="true"
            android:id="@+id/statistic_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/transparent_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <ImageView
                android:animateLayoutChanges="true"
                android:id="@+id/statistic_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/statistic_icon" />

            <TextView
                android:animateLayoutChanges="true"
                android:id="@+id/statistic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Статистика"
                android:textColor="@color/statistic"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:animateLayoutChanges="true"
            android:id="@+id/category_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/transparent_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <ImageView
                android:animateLayoutChanges="true"
                android:id="@+id/category_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/categories_icon" />

            <TextView
                android:animateLayoutChanges="true"
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Категории"
                android:textColor="@color/categories"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>